---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Loading from "../components/Loading.astro";

export interface Props {
  title?: string;
  home?: boolean;
}

const { title, home } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="loading bg-orange-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title + " | " : ""}Grizzly Cafe</title>
  </head>
  <body>
    <Loading />
    <Header home={home} />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Eagle Lake";
    src: url("/src/assets/fonts/Eagle_Lake/EagleLake-Regular.ttf")
      format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Noto Sans";
    src: url("/src/assets/fonts/Noto_Sans/NotoSans-Regular.ttf")
      format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  * {
    @apply font-display;
  }
</style>
