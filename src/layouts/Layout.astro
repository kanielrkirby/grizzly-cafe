---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Loading from "../components/Loading.astro";

export interface Props {
  title?: string;
  home?: boolean;
  theme?: "light" | "dark";
}

const { title, home, theme } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  class={`loading bg-orange-100 ${
    theme === "dark" ? "text-white" : "text-black"
  }`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title + " | " : ""}Grizzly Cafe</title>
  </head>
  <body class="h-full">
    <header></header>
    <Nav home={home} theme={theme} />
    <slot />
    <Footer />
    <Loading />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Eagle Lake";
    src: url("/src/assets/fonts/Eagle_Lake/EagleLake-Regular.ttf")
      format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Noto Sans";
    src: url("/src/assets/fonts/Noto_Sans/NotoSans-Regular.ttf")
      format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  * {
    @apply font-display;
  }
  h1 {
    @apply text-4xl !important;
  }
  h2 {
    @apply text-3xl !important;
  }
  h3 {
    @apply text-2xl !important;
  }
  html.loading {
    @apply overflow-hidden;
  }
</style>
