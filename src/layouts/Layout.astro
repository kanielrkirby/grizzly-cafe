---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
	title?: string;
	theme?: "dark" | "light";
}

const { title, theme } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class={`bg-orange-100 font-body ${theme ?? "light"}`}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? title + " | " : ""}Grizzly Cafe</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Eagle+Lake&family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
	* {
		@apply dark:text-white text-black;
	}
</style>
