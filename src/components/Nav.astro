<div
  class="fixed nav-screen w-full h-full transition-all backdrop-blur-md text-black duration-500 ease-in-out z-40 flex justify-center items-center"
>
  <div
    class="absolute w-full h-full z-40 bg-black opacity-50"
    id="nav-card-backdrop"
  >
  </div>
  <nav
    class="nav-card rounded-md z-50 bg-white p-24 transition-all duration-200"
  >
    <h2 class="text-center text-3xl mb-12">Pages</h2>
    <ul class="flex-col flex gap-4">
      <li class="bg-orange-50"><a href="/">Home</a></li>
      <li class="bg-red-50"><a href="/menu">Menu</a></li>
      <li class="bg-orange-50"><a href="/about">About</a></li>
    </ul>
  </nav>
</div>

<style>
  html .nav-screen {
    @apply opacity-0;
  }
  html.nav-card-open .nav-screen {
    @apply opacity-100;
  }
  html .nav-card {
    @apply pointer-events-none -translate-y-full;
  }
  html.nav-card-open .nav-card {
    @apply translate-y-0;
  }
  li a {
    @apply block rounded-md px-8 py-4 shadow-lg brightness-90;
  }
</style>

<script>
  const bd = document.querySelector("#nav-card-backdrop")!;
  bd.addEventListener("click", () => {
    document.documentElement.classList.toggle("nav-card-open");
  });
</script>
