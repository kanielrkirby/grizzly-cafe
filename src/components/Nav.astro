<div
    class="fixed nav-card w-full h-full transition-all backdrop-blur-md text-black duration-500 ease-in-out z-40 flex justify-center items-center"
>
    <div
        class="absolute w-full h-full z-40 bg-black opacity-50"
        id="nav-card-backdrop"
    >
    </div>
    <nav class="rounded-md z-50 bg-white p-24 font-display">
        <h2 class="text-center text-3xl mb-12">Pages</h2>
        <ul class="flex-col flex gap-4">
            <li class="bg-orange-50"><a href="/">Home</a></li>
            <li class="bg-red-50"><a href="/menu">Menu</a></li>
            <li class="bg-orange-50"><a href="/about">About</a></li>
        </ul>
    </nav>
</div>

<style>
    html:not(.nav-card-open) .nav-card {
        @apply -top-full opacity-0 pointer-events-none;
    }
    html.nav-card-open .nav-card {
        @apply top-0 opacity-100;
    }
    li a {
        @apply py-4 px-8 block brightness-90 rounded-md shadow-lg;
    }
</style>

<script>
    const bd = document.querySelector("#nav-card-backdrop")!;
    bd.addEventListener("click", () => {
        document.documentElement.classList.toggle("nav-card-open");
    });
</script>
